
void helper(Node *root, vector<int> &res, int level)
{
    if(!root)
    return;
    
    if(level == res.size())
    res.push_back(root -> data);
    
    helper(root -> left, res, level + 1);
    
    helper(root -> right, res, level + 1);
}

vector<int> leftView(Node *root)
{
  vector<int> res;
 
  helper(root, res, 0);
  
  return res;
}
